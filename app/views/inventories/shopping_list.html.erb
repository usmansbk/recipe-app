<div class="columns is-flex-direction-column is-align-items-center">
	<div class="column is-half">
		<h1 class="title has-text-centered">Shopping List</h1>
		<div class="columns has-text-weight-semibold">
			<div class="column">
				<p>Amount of food to buy: 2</p>
				<p>Total value of food needed: $53</p>
			</div>
			<div class="column">
				<p>Recipe: <%= link_to @recipe.name, recipe_path(@recipe) %></p>
				<p>Inventory: <%= link_to @inventory.name, inventory_path(@inventory) %></p>
			</div>
		</div>
	</div>
	<div class="column is-two-fifths">
		<div class="table-container">
			<table class="table is-fullwidth">
				<thead>
					<tr>
						<th>Food</th>
						<th>Quantity</th>
						<th>Price</th>
					</tr>
				</thead>
				<tbody>
				  <% @items.each do |item| %>
						<tr>
							<th><%= item.name %></th>
							<td><%= pluralize(item.quantity, item.measurement_unit) %></td>
							<td>$<%= item.price %></td>
						</tr>
      		<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>